<% content_for :head do %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= render 'shared/form_js_includes' %>
<% end %>
<% set_meta_tags :title => 'Sign up : Grapevine' %>

<div id="main-container" class="clearfix">
<section class="subpage">
  <header>
    <h2 class="title">I can't believe you fell for it.</h2>
    <p class="description">Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum. Cras mattis consectetur purus sit amet fermentum.</p>
  </header>

 <div class="section-content clearfix">


    <%= form_for @user, :validate => true, :html => { :class => 'form-horizontal signup-form'}, :url => subscriptions_path(@user) do |user_form| %>


        <div class="user-info">
          <h3>Your Information</h3>

            <div class="control-group">
              <label class="control-label">First Name</label>
              <div class="controls">
                <%= user_form.text_field :first_name %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Last Name</label>
              <div class="controls">
                <%= user_form.text_field :last_name %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Email</label>
              <div class="controls">
                <%= user_form.email_field :email, :validate => true %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Phone Number</label>
              <div class="controls">
                <%= user_form.phone_field :phone_number %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Password</label>
              <div class="controls">
                <%= user_form.password_field :password %>
              </div>
            </div>

        
        </div><!-- /.user-info -->

      <div class="biz-info">
        <h3>Your Business Information</h3>
          <%= user_form.fields_for :locations, :validate => true do |location_fields| %>
 
            <div class="control-group">
              <label class="control-label">Business Name</label>
              <div class="controls">
                <%= location_fields.text_field :name %> 
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Address</label>
              <div class="controls">
                <%= location_fields.text_field :street_address, :id => 'addresspicker_map' %>

              </div>
              <div id="map"></div>
                <%= location_fields.hidden_field :lat, :id => 'lat' %>
                <%= location_fields.hidden_field :long, :id => 'lng' %>
            </div>
          <% end %>

          <%= fields_for @subscription do |subscription_field| %>
            <%= subscription_field.hidden_field :plan_id, value: @plan.id  %>
          <% end %>
          
          
      </div><!-- /.biz-info -->

          
         
      <div class="clear action">
         <%= user_form.submit "Sign up for Grapevine Email Alerts", :class => 'btn signup-btn primary purple_button large' %>
      </div>
      <% end %>
     
      
  </div><!-- /.section-content -->
</section>
</div><!-- /#main-container -->