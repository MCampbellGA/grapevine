<% content_for :head do %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= javascript_include_tag "jquery-ui-1.8.7.min.js" %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "jquery.ui.addresspicker.js" %>
  <%= javascript_include_tag "signup.js" %>
  <%= javascript_include_tag "jquery.validate.js" %>

<% end %>

<div id="signup-page">
<div class="page-header">
	 <h2 class="motto">Reviews. <strong>Delivered</strong>.</h2>
            <h3 class="hand">Track every review posted online, good and bad!</h3>
	<h3>30 Day Free Trial, No Credit Card</h3>
</div>


  <div class="row">
    <p style="text-align:center;">We just need a little information from you to start tracking your business reviews!</p>

    <%= form_for @user, :html => { :class => 'form-horizontal'}, :url => subscriptions_path(@user) do |user_form| %>

        <div class="span5 offset1 user-info">
          <h3>Your Information</h3>

            <div class="control-group">
              <label class="control-label">First Name</label>
              <div class="controls">
                <%= user_form.text_field :first_name, :class => 'required' %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Last Name</label>
              <div class="controls">
                <%= user_form.text_field :last_name, :class => 'required' %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Email</label>
              <div class="controls">
                <%= user_form.email_field :email, :class => 'required email' %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Phone Number</label>
              <div class="controls">
                <%= user_form.phone_field :phone_number %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Password</label>
              <div class="controls">
                <%= user_form.password_field :password, :class => 'required password' %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Password</label>
              <div class="controls">
                <%= user_form.password_field :password_confirmation, :class => 'required', :equalTo => 'user[password]' %>
              </div>
            </div>

        
        </div><!-- /.user-info -->

      <div class="span5 biz-info">
        <h3>Your Business Information</h3>
          <%= fields_for @location do |location_fields| %>
 
            <div class="control-group">
              <label class="control-label">Business Name</label>
              <div class="controls">
                <%= location_fields.text_field :name %> 
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Address</label>
              <div class="controls">
                <%= location_fields.text_field :street_address, :id => 'addresspicker_map', :class => 'required' %>

              </div>
              <div id="map"></div>
                <%= location_fields.hidden_field :lat, :id => 'lat' %>
                <%= location_fields.hidden_field :long, :id => 'lng' %>
            </div>


            <!-- Address Line 2      : <%= location_fields.text_field :address_line_2 %>
            City                : <%= location_fields.text_field :city %>
            State               : <%= location_fields.text_field :state %>
            Zip                 : <%= location_fields.text_field :zip %>
            Website             : <%= location_fields.url_field :website %> -->
          <% end %>

          <%= fields_for @subscription do |subscription_field| %>
            <%= subscription_field.hidden_field :plan_id, value: @plan.id  %>
          <% end %>
          
          
      </div><!-- /.biz-info -->

          
         
      <div class="span12">
         <%= user_form.submit "Sign up for Grapevine Email Alerts", :class => 'btn signup-btn primary purple_button large' %>
          <% end %>
     
      </div><!-- /.span12 -->
  </div><!-- /.row -->
</div><!-- /#signup-page -->
<script type="text/javascript">
  $("form").validate();
</script>

